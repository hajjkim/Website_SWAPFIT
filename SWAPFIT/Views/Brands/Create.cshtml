@model SWAPFIT.Models.ThuongHieu

@{
    ViewData["Title"] = "Thêm thương hiệu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm thương hiệu mới</h2>

<form asp-action="CreateBrand" asp-controller="Admin" method="post">
    <div class="mb-3">
        <label class="form-label">Tên thương hiệu</label>
        <input asp-for="TenThuongHieu" class="form-control" />
        <span asp-validation-for="TenThuongHieu" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Brands" asp-controller="Admin" class="btn btn-secondary">Quay lại</a>
</form>
