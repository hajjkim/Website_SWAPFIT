@model SWAPFIT.Models.ThuongHieu
@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thương hiệu</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaThuongHieu" />

    <div class="mb-3">
        <label class="form-label">Tên thương hiệu</label>
        <input asp-for="TenThuongHieu" class="form-control" />
        <span asp-validation-for="TenThuongHieu" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
