@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SWAPFIT</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div class="wrapper d-flex flex-column min-vh-100">
        @await Html.PartialAsync("_Header")
        

        <main role="main" class="flex-fill">
            @RenderBody()
        </main>

        @await Html.PartialAsync("_Footer")
    </div>
    <form id="__AjaxAntiForgeryForm" asp-action="SaveVoucher" asp-controller="UuDai" method="POST">
        @Html.AntiForgeryToken()
    </form>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
   
    <script>
        $(document).ready(function () {
            $('.save-voucher-btn').on('click', function () {
                var btn = $(this);
                var id = btn.data('voucher-id');

                if (btn.prop('disabled')) return;

                btn.prop('disabled', true)
                   .html('<span class="spinner-border spinner-border-sm"></span> Đang lưu...');

                $.post('/UuDai/SaveVoucher', { voucherId: id })
                    .done(function (res) {
                        if (res && res.success) {
                            btn.removeClass('btn-warning').addClass('btn-success')
                               .html('Đã lưu').prop('disabled', true);
                            alert(res.message);
                        } else {
                            alert(res.message || "Có lỗi xảy ra!");
                            btn.prop('disabled', false).html('Lưu voucher');
                        }
                    })
                    .fail(function (xhr) {
                        console.log(xhr.responseText);
                        alert('Lỗi hệ thống! Vui lòng thử lại hoặc đăng nhập lại.');
                        btn.prop('disabled', false).html('Lưu voucher');
                    });
            });
        });
    </script>
</body>
</html>
