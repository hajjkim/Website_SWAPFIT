    <!-- Script lưu voucher (phải để SAU jQuery) -->
    <script>
        $(document).ready(function () {
            $('.save-voucher-btn').on('click', function () {
                var btn = $(this);
                var id = btn.data('voucher-id');

                if (btn.prop('disabled')) return;

                btn.prop('disabled', true)
                   .html('<span class="spinner-border spinner-border-sm"></span> Đang lưu...');

                $.post('/UuDai/SaveVoucher', { voucherId: id })
                    .done(function (res) {
                        if (res && res.success) {
                            btn.removeClass('btn-warning').addClass('btn-success')
                               .html('Đã lưu').prop('disabled', true);
                            alert(res.message);
                        } else {
                            alert(res.message || "Có lỗi xảy ra!");
                            btn.prop('disabled', false).html('Lưu voucher');
                        }
                    })
                    .fail(function (xhr) {
                        console.log(xhr.responseText);
                        alert('Lỗi hệ thống! Vui lòng thử lại hoặc đăng nhập lại.');
                        btn.prop('disabled', false).html('Lưu voucher');
                    });
            });
        });
    </script>
