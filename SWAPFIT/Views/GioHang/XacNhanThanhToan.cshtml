@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: #f4fff6;
        font-family: "Segoe UI", sans-serif;
    }

    .success-box {
        max-width: 600px;
        margin: 60px auto;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 40px;
        text-align: center;
        border-top: 8px solid #4CAF50;
    }

    .success-icon {
        width: 110px;
        margin-bottom: 20px;
    }

    h2 {
        font-weight: 700;
        color: #2e7d32;
    }

    p {
        font-size: 1.1rem;
        color: #555;
    }

    .btn-success {
        padding: 10px 24px;
        font-size: 1.05rem;
        border-radius: 10px;
        margin-top: 15px;
    }

    .btn-outline-success {
        border-radius: 10px;
        margin-top: 15px;
    }
</style>

<div class="success-box">
    <img src="https://cdn-icons-png.flaticon.com/512/845/845646.png" class="success-icon" />

    <h2>🎉 Đặt hàng thành công!</h2>

    <p>@ViewBag.Message</p>

    <a href="/DonHang/LichSuDonHang" class="btn btn-success">
        📦 Xem lịch sử đơn hàng
    </a>

    <br />

    <a href="/TinTuc/ChoTang" class="btn btn-outline-success">
        🛍 Tiếp tục mua sắm
    </a>
</div>
