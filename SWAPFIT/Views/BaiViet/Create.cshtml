@model SWAPFIT.Models.BaiViet
@{
    ViewData["Title"] = "Đăng bài viết";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
<style>
    .img-wrapper {
        position: relative;
        display: inline-block;
        margin: 5px;
    }

    .delete-btn {
        position: absolute;
        top: 5px;
        right: 5px;
        background-color: rgba(255, 0, 0, 0.5); 
        color: white;
        border: none;
        border-radius: 25%;
        padding: 5px;
        cursor: pointer;
        font-size: 10px;
    }

        .delete-btn:hover {
            background-color: red;
        }

</style>
<div class="container my-5">
    <h3 class="text-success fw-bold text-center mb-4"><i class="fa-solid fa-leaf me-2"></i>Đăng bài viết</h3>

    <form asp-action="Create" enctype="multipart/form-data" method="post" class="p-4 rounded-4 shadow bg-light">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Tiêu đề</label>
                <input asp-for="TieuDe" class="form-control" placeholder="Nhập tiêu đề bài viết" required />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold d-block">Loại bài đăng</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="LoaiBaiDang" id="LoaiTang" value="Tặng" checked>
                    <label class="form-check-label" for="LoaiTang">🎁 Tặng</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="LoaiBaiDang" id="LoaiBan" value="Bán">
                    <label class="form-check-label" for="LoaiBan">💰 Bán</label>
                </div>
            </div>

            <div class="col-md-12">
                <label class="form-label fw-bold">Nội dung</label>
                <textarea asp-for="NoiDung" class="form-control" rows="3"></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Danh mục</label>
                <select asp-for="MaDanhMuc" asp-items="ViewBag.DanhMucs" class="form-select" id="MaDanhMuc" required>
                    <option value="">-- Chọn danh mục --</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Thương hiệu</label>
                <select asp-for="MaThuongHieu" asp-items="ViewBag.ThuongHieus" class="form-select" required>
                    <option value="">-- Chọn thương hiệu --</option>
                </select>
            </div>

            <div class="col-md-4" id="giaContainer">
                <label class="form-label fw-bold">Giá (VNĐ)</label>
                <input asp-for="GiaSanPham" class="form-control" type="number" min="0" id="GiaSanPham" />
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" type="number" min="1" required />
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Size</label>
                <select asp-for="Size" class="form-select" id="SizeDropdown">
                    <option value="">-- Chọn size --</option>
                </select>
            </div>
            <div class="col-12">
                <label class="form-label fw-bold">Ảnh sản phẩm</label>
                <div class="border rounded p-3 bg-white">
                    <input type="file" name="AnhSanPham" id="imageInput" multiple class="form-control" accept="image /png, image /jpeg, image/tiff,image/tif" />
                    <div id="previewContainer" class="mt-3 d-flex flex-wrap gap-2">
                        @if (Model.AnhBaiViets != null && Model.AnhBaiViets.Any())
                        {
                           
                            <img src="@Url.Content(Model.AnhBaiViets.FirstOrDefault()?.DuongDan)"
                                 alt="Ảnh sản phẩm" class="product-img" />
                        }
                        else
                        {
                           
                        }
                    </div>
                    <div id="errorContainer" style="color: red; margin-top: 10px;"></div> 
                </div>
                </div>
            </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success px-5 py-2 fw-bold">
                <i class="fa-solid fa-paper-plane me-2"></i>Đăng bài
            </button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $('input[name="LoaiBaiDang"]').change(function () {
        const loai = $('input[name="LoaiBaiDang"]:checked').val();
        if (loai === "Tặng") {
            $('#giaContainer').hide();
            $('#GiaSanPham').val(0);
        } else {
            $('#giaContainer').show();
            $('#GiaSanPham').val('');
        }
    }).trigger('change');

    $('#MaDanhMuc').change(function () {
        const categoryId = $(this).val();
        const dropdown = $('#SizeDropdown').closest('.col-md-4'); 
        if (categoryId) {
            $.getJSON(`/BaiViet/GetSizesByCategory?categoryId=${categoryId}`, function (sizes) {
                const sizeSelect = $('#SizeDropdown');
                sizeSelect.empty();

                if (sizes.length === 0) {
                    dropdown.hide(); 
                } else {
                    dropdown.show(); 
                    sizeSelect.append(`<option value="">-- Chọn size --</option>`);
                    sizes.forEach(size => sizeSelect.append(`<option value="${size}">${size}</option>`));
                }
            });
        } else {
            dropdown.hide(); 
        }
    }).trigger('change');
           document.getElementById('imageInput').addEventListener('change', function (event) {
        const allowedExtensions = ['image/png', 'image/jpeg', 'image/tiff', 'image/tif']; 
        const files = event.target.files;

        const container = document.getElementById('previewContainer');
        const errorMessages = []; 
        container.innerHTML = ''; 
        for (const file of files) {
            if (!allowedExtensions.includes(file.type)) {
                errorMessages.push(`Tệp ${file.name} không hợp lệ! Chỉ chấp nhận hình ảnh PNG, JPEG, hoặc TIFF.`);
                continue; 
            }
            const reader = new FileReader();
            reader.onload = (e) => {
                const imgWrapper = document.createElement('div');
                imgWrapper.classList.add('img-wrapper');

                const img = document.createElement('img');
                img.src = e.target.result;
                img.style.height = '100px';
                img.style.borderRadius = '10px';
                img.style.objectFit = 'cover';
                img.style.margin = '5px';

                const deleteButton = document.createElement('button');
                deleteButton.innerHTML = 'X';
                deleteButton.classList.add('btn', 'btn-danger', 'btn-sm', 'delete-btn');
                deleteButton.onclick = () => {
                    imgWrapper.remove(); 
                };

                imgWrapper.appendChild(img);
                imgWrapper.appendChild(deleteButton);
                container.appendChild(imgWrapper);
            };
            reader.readAsDataURL(file);
        }

        
        if (errorMessages.length > 0) {
            document.getElementById('errorContainer').innerText = errorMessages.join("\n");
        }
    });

</script>
