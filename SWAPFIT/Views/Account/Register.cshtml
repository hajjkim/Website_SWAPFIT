@model SWAPFIT.Models.NguoiDung
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">

                <!-- HEADER -->
                <div class="card-header bg-success text-white text-center rounded-top-4 py-3">
                    <h4 class="mb-0 fw-bold">📝 Đăng ký tài khoản</h4>
                    <small>Tạo tài khoản để sử dụng SWAPFIT</small>
                </div>

                <div class="card-body p-4">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewBag.Error
                        </div>
                    }

                    <form asp-action="Register" method="post" enctype="multipart/form-data">

                        <!-- ===================== -->
                        <!-- 🧑‍💻 THÔNG TIN TÀI KHOẢN -->
                        <!-- ===================== -->
                        <h6 class="fw-bold text-success mb-3">🧑‍💻 Thông tin tài khoản</h6>

                        <div class="mb-3">
                            <label class="form-label">Tên đăng nhập</label>
                            <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="••••••••" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Họ và tên</label>
                            <input asp-for="HoTen" class="form-control" placeholder="Nguyễn Văn A" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input asp-for="SoDienThoai" class="form-control" placeholder="0xxx xxx xxx" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Ảnh đại diện</label>
                            <input type="file" name="anhDaiDien" class="form-control" />
                        </div>

                       
                        <div class="p-3 rounded-3 bg-light border mb-4">
                            <h6 class="fw-bold text-success mb-3">🏦 Tài khoản ngân hàng (tuỳ chọn)</h6>

                            <div class="mb-3">
                                <label class="form-label">Tên ngân hàng</label>
                                <select name="tenNganHang" class="form-select">
                                    <option value="">-- Chọn ngân hàng --</option>

                                    <option value="Ngân hàng Nhà nước Việt Nam">Ngân hàng Nhà nước Việt Nam</option>

                                    <option value="BIDV">BIDV - Ngân hàng Đầu tư và Phát triển Việt Nam</option>
                                    <option value="Vietcombank">Vietcombank - Ngân hàng Ngoại thương Việt Nam</option>
                                    <option value="VietinBank">VietinBank - Ngân hàng Công Thương Việt Nam</option>
                                    <option value="Agribank">Agribank - Ngân hàng Nông nghiệp & PTNT Việt Nam</option>

                                    <option value="ACB">ACB - Ngân hàng Á Châu</option>
                                    <option value="Techcombank">Techcombank - Ngân hàng Kỹ Thương Việt Nam</option>
                                    <option value="MB Bank">MB Bank - Ngân hàng Quân đội</option>
                                    <option value="Sacombank">Sacombank - Ngân hàng Sài Gòn Thương Tín</option>
                                    <option value="VPBank">VPBank - Ngân hàng Việt Nam Thịnh Vượng</option>
                                    <option value="TPBank">TPBank - Ngân hàng Tiên Phong</option>
                                    <option value="SHB">SHB - Ngân hàng Sài Gòn – Hà Nội</option>
                                    <option value="HDBank">HDBank - Ngân hàng Phát triển TP.HCM</option>
                                    <option value="OCB">OCB - Ngân hàng Phương Đông</option>
                                    <option value="SeABank">SeABank - Ngân hàng Đông Nam Á</option>
                                    <option value="VIB">VIB - Ngân hàng Quốc tế</option>
                                    <option value="Eximbank">Eximbank - Ngân hàng Xuất Nhập Khẩu</option>
                                    <option value="LienVietPostBank">LPBank - Ngân hàng Bưu điện Liên Việt</option>
                                    <option value="Nam A Bank">Nam A Bank</option>
                                    <option value="Bac A Bank">Bac A Bank</option>
                                    <option value="PVcomBank">PVcomBank</option>
                                    <option value="VietBank">VietBank</option>
                                    <option value="Saigonbank">Saigonbank</option>
                                    <option value="KienlongBank">KienlongBank</option>
                                    <option value="NCB">NCB - Ngân hàng Quốc Dân</option>
                                    <option value="BaoVietBank">BaoViet Bank</option>
                                    <option value="ABBANK">ABBank</option>

                                    <option value="HSBC">HSBC Việt Nam</option>
                                    <option value="Standard Chartered">Standard Chartered Việt Nam</option>
                                    <option value="Shinhan Bank">Shinhan Bank Việt Nam</option>
                                    <option value="Woori Bank">Woori Bank Việt Nam</option>
                                    <option value="UOB">UOB Việt Nam</option>
                                    <option value="Public Bank">Public Bank Việt Nam</option>

                                    <option value="MoMo">Ví MoMo</option>
                                    <option value="ZaloPay">ZaloPay</option>
                                    <option value="VNPay">VNPay</option>
                                </select>
                            </div>


                            <div class="mb-3">
                                <label class="form-label">Số tài khoản</label>
                                <input name="soTaiKhoan" class="form-control" placeholder="VD: 0123456789" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Chủ tài khoản</label>
                                <input name="chuTaiKhoan" class="form-control" placeholder="NGUYEN VAN A" />
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Ảnh QR (tối đa 8 ảnh)</label>
                                <input type="file" name="qrImages" class="form-control" multiple accept="image/*" />
                                <small class="text-muted">
                                    Hỗ trợ PNG / JPG / JPEG / WEBP
                                </small>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100 py-2 fw-bold">
                            ✅ Đăng ký
                        </button>

                        <div class="text-center mt-3">
                            <small>
                                Đã có tài khoản?
                                <a href="/Account/Login" class="text-success fw-semibold text-decoration-none">
                                    Đăng nhập
                                </a>
                            </small>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
