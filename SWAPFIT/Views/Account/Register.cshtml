@model SWAPFIT.Models.NguoiDung
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background: radial-gradient(circle at top left, #e8f9f1, #f7fff9);
        min-height: 100vh;
    }

    .auth-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .auth-card {
        border-radius: 18px;
        border: none;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        max-width: 520px;
        width: 100%;
    }

    .auth-header {
        background: linear-gradient(135deg, #28a745, #6ad790);
        color: #fff;
        padding: 20px 24px;
        text-align: center;
    }

        .auth-header h3 {
            font-weight: 700;
            margin-bottom: 4px;
        }

        .auth-header p {
            margin: 0;
            opacity: 0.9;
            font-size: 0.95rem;
        }

    .brand-circle {
        width: 54px;
        height: 54px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.18);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        font-size: 24px;
    }

    .auth-body {
        padding: 24px 24px 20px;
        background-color: #ffffff;
    }

    .form-label {
        font-weight: 600;
        font-size: 0.95rem;
    }

    .input-group-text {
        background-color: #f4f8f5;
        border-right: none;
    }

    .form-control {
        border-left: none;
        background-color: #f9fcfa;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #28a745;
            background-color: #ffffff;
        }

    .btn-primary-auth {
        background: #28a745;
        border-color: #28a745;
        font-weight: 600;
        letter-spacing: 0.3px;
    }

        .btn-primary-auth:hover {
            background: #208a38;
            border-color: #208a38;
        }

    .small-text {
        font-size: 0.9rem;
    }

    .link-green {
        color: #28a745;
    }

        .link-green:hover {
            color: #1f6f32;
        }

    .avatar-preview {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #e3f2ea;
        margin-right: 10px;
    }

    .toggle-password {
        cursor: pointer;
    }
</style>

<div class="auth-wrapper">
    <div class="card auth-card">
        <div class="auth-header">
            <div class="brand-circle">
                <i class="bi bi-person-plus"></i>
            </div>
            <h3>Tạo tài khoản mới</h3>
            <p>Tham gia cộng đồng trao đổi tủ đồ xanh cùng SWAPFIT 🌿</p>
        </div>

        <div class="auth-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mb-3">@ViewBag.Error</div>
            }

            <form asp-action="Register" method="post" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label">Tên đăng nhập</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-person"></i>
                        </span>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Chọn tên đăng nhập" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input asp-for="MatKhau"
                               type="password"
                               id="passwordInput"
                               class="form-control"
                               placeholder="Nhập mật khẩu"
                               required />
                        <span class="input-group-text toggle-password" id="togglePassword">
                            <i class="bi bi-eye-slash"></i>
                        </span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Họ và tên</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-card-text"></i>
                        </span>
                        <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên (không bắt buộc)" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Số điện thoại</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-telephone"></i>
                        </span>
                        <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ảnh đại diện</label>
                    <div class="d-flex align-items-center">
                        <img id="avatarPreview" src="~/images/default-avatar.png" alt="Avatar" class="avatar-preview" />
                        <input type="file" name="anhDaiDien" id="avatarInput" class="form-control" accept="image/*" />
                    </div>
                    <small class="text-muted small-text">
                        Định dạng: JPG, PNG. Kích thước nhỏ hơn 2MB.
                    </small>
                </div>

                <button type="submit" class="btn btn-primary-auth w-100 py-2 mt-2">
                    Đăng ký
                </button>

                <p class="text-center mt-3 mb-0 small-text">
                    Đã có tài khoản?
                    <a href="/Account/Login" class="text-decoration-none fw-semibold link-green">
                        Đăng nhập ngay
                    </a>
                </p>
            </form>
        </div>
    </div>
</div>

<script>
    // Hiện / ẩn mật khẩu
    const passwordInput = document.getElementById('passwordInput');
    const togglePassword = document.getElementById('togglePassword');

    if (passwordInput && togglePassword) {
        togglePassword.addEventListener('click', function () {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            const icon = this.querySelector('i');
            if (type === 'password') {
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        });
    }

    // Preview ảnh đại diện
    const avatarInput = document.getElementById('avatarInput');
    const avatarPreview = document.getElementById('avatarPreview');

    if (avatarInput && avatarPreview) {
        avatarInput.addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    avatarPreview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    }
</script>
