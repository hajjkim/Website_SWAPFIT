                                        <p class="text-success fw-bold mb-1">
                                            @(string.Format("{0:N0}", b.GiaSanPham ?? 0)) đ
                                        </p>
                                        <span class="badge bg-success fs-7">@b.LoaiBaiDang</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">Bạn chưa đăng sản phẩm nào.</div>
                }
            </div>

            <!-- Tin nhắn gần đây -->
            <div class="section-card">
                <h4 class="section-title">Tin nhắn gần đây</h4>
                @if (tinNhanGanDay != null && tinNhanGanDay.Any())
                {
                    <div class="chat-list">
                        @foreach (var tn in tinNhanGanDay)
                        {
                            int me = Model.MaNguoiDung;
                            var other = tn.MaNguoiGui == me ? tn.NguoiNhan : tn.NguoiGui;
                            if (other == null) { continue; }

                            string avatarPath;
                            if (string.IsNullOrWhiteSpace(other.AnhDaiDien))
                            {
                                // ảnh mặc định
                                avatarPath = Url.Content("~/images/default-avatar.png");
                            }
                            else
                            {
                                // other.AnhDaiDien có thể là "uploads/avatars/a.png" hoặc "/uploads/avatars/a.png"
                                var raw = other.AnhDaiDien.TrimStart('~', '/');
                                avatarPath = Url.Content("~/" + raw);
                            }

                            <a href="@Url.Action("Chat", "TinNhan", new { nguoiNhanId = other.MaNguoiDung })"
                               class="chat-item text-decoration-none text-dark">
                                <img src="@avatarPath" class="chat-avatar" alt="@other.HoTen" />
                                <div class="flex-grow-1">
                                    <div class="chat-name">@other.HoTen</div>
                                    <div class="chat-lastmsg">@tn.NoiDung</div>
                                </div>
                                <div class="text-end">
                                    <small class="d-block text-muted mb-1">
                                        @(tn.ThoiGianGui?.ToString("HH:mm dd/MM"))
                                    </small>
                                    @if (tn.DaDoc.GetValueOrDefault() == false && tn.MaNguoiGui != me)
                                    {
                                        <div class="unread-badge">Mới</div>
                                    }
                                </div>
                            </a>
                        }

                    </div>
                }
                else
                {
                    <div class="empty-state">Bạn chưa có cuộc trò chuyện nào.</div>
                }
            </div>
        </div>

