@model SWAPFIT.Models.DanhMuc
@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Thêm danh mục</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Tên danh mục</label>
        <input asp-for="TenDanhMuc" class="form-control" />
        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-3">Lưu</button>
    <a href="/Category" class="btn btn-secondary mt-3">Hủy</a>
</form>
