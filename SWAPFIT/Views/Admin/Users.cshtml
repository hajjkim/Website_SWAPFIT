@model List<SWAPFIT.Models.NguoiDung>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý bài viết";
}
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary fw-bold">👥 Quản lý người dùng</h2>

    <div class="card shadow-sm">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Tên đăng nhập</th>
                            <th scope="col">Họ tên</th>
                            <th scope="col">Email</th>
                            <th scope="col">Vai trò</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.MaNguoiDung</td>
                                    <td class="fw-semibold">@user.TenDangNhap</td>
                                    <td>@user.HoTen</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@user.VaiTro</span>
                                    </td>
                                    <td>
                                        <span class="badge @(user.TrangThai == "Bị khóa" ? "bg-danger" : "bg-success") fw-semibold">
                                            @user.TrangThai
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <form asp-action="ToggleBlockUser" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@user.MaNguoiDung" />
                                                <button type="submit" class="btn btn-sm @(user.TrangThai == "Bị khóa" ? "btn-success" : "btn-warning")">
                                                    @(user.TrangThai == "Bị khóa" ? "Mở khóa" : "Khóa")
                                                </button>
                                            </form>

                                            <form asp-action="DeleteUser" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@user.MaNguoiDung" />
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn chắc chắn muốn xóa người dùng này?');">
                                                    Xóa
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">Chưa có người dùng nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    table.table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
        transition: background-color 0.2s ease-in-out;
    }

    .badge {
        font-size: 0.9rem;
    }

    .btn-sm {
        font-size: 0.85rem;
        padding: 0.25rem 0.5rem;
    }

    }
</style>
