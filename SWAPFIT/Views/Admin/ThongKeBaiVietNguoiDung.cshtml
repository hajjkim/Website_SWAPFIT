@model List<SWAPFIT.Models.ThongKeBaiVietNguoiDung>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Xếp hạng bài viết người dùng";
}

<div class="container mt-4">
    <h3 class="mb-3 text-success fw-bold">🏆 Xếp hạng người đăng bài nhiều nhất</h3>

    @if (!Model.Any())
    {
        <div class="alert alert-light border">
            Chưa có dữ liệu bài viết để thống kê.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-success">
                    <tr class="text-center">
                        <th>Hạng</th>
                        <th class="text-start">Người dùng</th>
                        <th>Tổng bài</th>
                        <th>Chờ duyệt</th>
                        <th>Đang hiển thị</th>
                        <th>Từ chối</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var stt = 1;
                    }
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">@stt</td>
                            <td>
                                <div class="fw-semibold">@(!string.IsNullOrEmpty(u.HoTen) ? u.HoTen : u.TenDangNhap)</div>
                                <div class="text-muted small">@u.TenDangNhap</div>
                            </td>
                            <td class="text-center fw-bold">@u.TongSoBai</td>
                            <td class="text-center text-warning">@u.ChoDuyet</td>
                            <td class="text-center text-success">@u.DangHienThi</td>
                            <td class="text-center text-danger">@u.TuChoi</td>
                            <td class="text-center">
                                <a asp-action="ThongKeBaiViet"
                                   asp-route-id="@u.MaNguoiDung"
                                   class="btn btn-outline-primary btn-sm">
                                    Xem chi tiết
                                </a>
                            </td>
                        </tr>
                        stt++;
                    }
                </tbody>
            </table>
        </div>
    }

    <a asp-action="Dashboard" class="btn btn-outline-secondary mt-3">
        ⬅ Quay lại Dashboard
    </a>
</div>
